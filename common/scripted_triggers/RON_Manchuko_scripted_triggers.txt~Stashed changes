			has_idea = MAN_low_legitimacy_I5
			has_idea = MAN_low_legitimacy_I6
			has_idea = MAN_low_legitimacy_I7
			has_idea = MAN_low_legitimacy_I8
			has_idea = MAN_low_legitimacy_I9
			has_idea = MAN_low_legitimacy_I10
		}
	}
}
