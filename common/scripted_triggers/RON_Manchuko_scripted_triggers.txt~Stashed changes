# MAN_not_have_rokw


### RELIANCE ON KWANTUNG ARMY
MAN_not_have_rokw = {
	custom_trigger_tooltip = {
		tooltip = MAN_not_have_rokw_TRIG

		NOT = { has_idea = MAN_reliance_on_kwantung_army_I3 }
		NOT = { has_idea = MAN_reliance_on_kwantung_army_I2 }
		NOT = { has_idea = MAN_reliance_on_kwantung_army_I1 }
	}
}

