Second_World_War_Allied_Victory = {
	custom_trigger_tooltip = {
		tooltip = Second_World_War_Allied_Victory
	}
	#Second_World_War_happening = no
	ENG = {
		NOT = {
			#			has_war_with = SOV
			has_war_with = GER
			has_war_with = ITA
			has_war_with = JAP
		}
	}
	GER = {
		OR = {
			NOT = {
				has_government = fascism
				has_government = neutrality
			}
			exists = no
		}
	}
	ITA = {
		OR = {
			NOT = {
				has_government = fascism
				has_government = neutrality
			}
			exists = no
		}
	}
	JAP = {
		OR = {
			NOT = {
				has_government = fascism
				has_government = neutrality
			}
			exists = no
		}
	}
}

Second_World_War_Axis_Victory = {
	custom_trigger_tooltip = {
		tooltip = Second_World_War_Axis_Victory
	}
	#Second_World_War_happening = no
	GER = {
		OR = {
			has_government = fascism
			has_government = neutrality
		}
		exists = yes
		#has_war = no
		NOT = {
			#	has_war_with = SOV
			has_war_with = ENG
			has_war_with = FRA
			has_war_with = JAP
			has_war_with = ITA
		}
	}
	ITA = {
		OR = {
			has_government = fascism
			has_government = neutrality
		}
		exists = yes
	}
	JAP = {
		OR = {
			has_government = fascism
			has_government = neutrality
		}
		exists = yes
	}
	ENG = {
		OR = {
			has_government = fascism
			has_government = neutrality
			exists = no
			RON_ENG_Defeated = yes
		}
	}
	FRA = {
		OR = {
			has_government = fascism
			has_government = neutrality
			exists = no
			RON_FRA_Defeated = yes
		}
	}
	SOV = {
		OR = {
			has_government = fascism
			has_government = neutrality
			exists = no
			RON_SOV_Defeated = yes
			NOT = { has_war_with = GER }
		}
	}
}

ENG_focus_available_embargo_sanction = {
	exists = yes
	OR = {
		has_offensive_war = yes
		has_added_tension_amount > 15
	}
	NOT = { is_in_faction_with = ENG }
	NOT = { has_war_with = ENG }
}

ENG_focus_available_war = {
	exists = yes
	OR = {
		has_offensive_war = yes
		has_added_tension_amount > 30
	}
	NOT = { has_government = ROOT }
	NOT = { is_in_faction_with = ENG }
	NOT = { has_war_with = ENG }
}


First_World_War_CP_Victory = {
	custom_trigger_tooltip = {
		tooltip = First_World_War_CP_Victory
	}
	#First_World_War_happening = no
	GER = {
		OR = {
			has_government = fascism
			has_government = neutrality
		}
		owns_state = 85
		owns_state = 86
		owns_state = 865
		owns_state = 762
		owns_state = 188
		exists = yes
		#has_war = no
		NOT = {
			has_war_with = RUE
			has_war_with = ENG
			has_war_with = FRA
		}
	}
	AUH = {
		OR = {
			has_government = fascism
			has_government = neutrality
		}
		exists = yes
	}
	OTT = {
		OR = {
			has_government = fascism
			has_government = neutrality
		}
		exists = yes
	}
}

