#	Example:
# 
#	example_trigger = {
#		tag = GER
#		is_ai = no
#	}
#
#
#	In a script file:
#
#	trigger = {
#		example_trigger = yes
#	}
# 

is_not_a_puppet_or_is_puppet_of_CHI = {
	exists = yes
	OR = {
		is_puppet = no
		is_puppet_of = CHI
	}
}

