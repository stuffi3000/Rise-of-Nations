	OR = {
		ENG = {
			has_capitulated = yes
		}
		ENG = {
			exists = no
		}
		ENG = {
			is_subject_of = GER
		}
		OR = {
			GER = {
				controls_state = 126
			}
			any_other_country = {
				is_in_faction_with = GER
				controls_state = 126
			}
		}
		has_global_flag = fall_of_britain
		has_global_flag = ron_fall_of_britain
	}
}

