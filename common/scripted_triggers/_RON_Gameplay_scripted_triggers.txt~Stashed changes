RON_DNC_GER_aligned = {
	AND = {
		any_owned_state = {
			is_owned_by = ROOT
			is_capital = yes
			is_on_continent = europe
		}
		NOT = {
			has_government = democratic
		}
	}
}

RON_DNC_ENG_aligned = {
	AND = {
		any_owned_state = {
			is_owned_by = ROOT
			is_capital = yes
			OR = {
				is_on_continent = south_america
				is_on_continent = africa
				is_on_continent = middle_east
				is_on_continent = oceania
			}
		}
		OR = {
			has_government = democratic
			has_government = neutrality
		}
	}
}

