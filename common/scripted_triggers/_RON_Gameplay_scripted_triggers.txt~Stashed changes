is_a_russian_country = {

	OR = {
		tag = SOV
		tag = RUE
		tag = WHR
		tag = RUS
	}

}

is_start_date_with_content = {
	OR = {
		AND = {
			date > 1899.1.1
			date < 1919.1.1
		}
		AND = {
			date > 1932.1.1
			date < 1947.1.1
		}
	}

}

RON_ALB_Defeated = {
	OR = {
		ALB = {
			has_capitulated = yes
		}
		ALB = {
			exists = no
		}
		ALB = {
			is_subject_of = ITA
		}
		OR = {
			ITA = {
				controls_state = 44
			}
			any_other_country = {
				is_in_faction_with = ITA
				controls_state = 44
			}
		}
	}
}

