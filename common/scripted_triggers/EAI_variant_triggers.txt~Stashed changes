### air

EAI_fighter_developed = {
	if = { limit = { has_tech = jet_fighter2 }    check_variable = { EAI_VARIANT/jet_fighter_equipment_2 > 1 } }
	else_if = { limit = { has_tech = jet_fighter1 }    check_variable = { EAI_VARIANT/jet_fighter_equipment_1 > 1 } }

	else_if = { limit = { has_tech = fighter3 }        check_variable = { EAI_VARIANT/fighter_equipment_3 > 1 } }
	else_if = { limit = { has_tech = fighter2 }        check_variable = { EAI_VARIANT/fighter_equipment_2 > 1 } }
	else_if = { limit = { has_tech = fighter1 }        check_variable = { EAI_VARIANT/fighter_equipment_1 > 1 } }
}

EAI_bomber_developed = {
	if = { limit = { check_variable = { EAI_FOCUS/AIR/ground_bomber = global.EAI_TAC_AIR } has_tech = jet_tactical_bomber2 }    check_variable = { EAI_VARIANT/jet_tac_bomber_equipment_2 > 1 } }
	else_if = { limit = { check_variable = { EAI_FOCUS/AIR/ground_bomber = global.EAI_TAC_AIR } has_tech = jet_tactical_bomber1 }    check_variable = { EAI_VARIANT/jet_tac_bomber_equipment_1 > 1 } }

	else_if = { limit = { check_variable = { EAI_FOCUS/AIR/ground_bomber = global.EAI_TAC_AIR } has_tech = tactical_bomber3 }        check_variable = { EAI_VARIANT/tac_bomber_equipment_3 > 1 } }
	else_if = { limit = { check_variable = { EAI_FOCUS/AIR/ground_bomber = global.EAI_TAC_AIR } has_tech = tactical_bomber2 }        check_variable = { EAI_VARIANT/tac_bomber_equipment_2 > 1 } }
	else_if = { limit = { check_variable = { EAI_FOCUS/AIR/ground_bomber = global.EAI_TAC_AIR } has_tech = tactical_bomber1 }        check_variable = { EAI_VARIANT/tac_bomber_equipment_1 > 1 } }

	else_if = { limit = { check_variable = { EAI_FOCUS/AIR/ground_bomber = global.EAI_CAS_AIR } has_tech = CAS3 }        check_variable = { EAI_VARIANT/CAS_equipment_3 > 1 } }
	else_if = { limit = { check_variable = { EAI_FOCUS/AIR/ground_bomber = global.EAI_CAS_AIR } has_tech = CAS2 }        check_variable = { EAI_VARIANT/CAS_equipment_2 > 1 } }
	else_if = { limit = { check_variable = { EAI_FOCUS/AIR/ground_bomber = global.EAI_CAS_AIR } has_tech = CAS1 }        check_variable = { EAI_VARIANT/CAS_equipment_1 > 1 } }
}

EAI_strat_developed = {
	if = { limit = { has_tech = jet_strategic_bomber1 }    check_variable = { EAI_VARIANT/jet_strat_bomber_equipment_1 > 1 } }

	else_if = { limit = { has_tech = strategic_bomber3 }        check_variable = { EAI_VARIANT/strat_bomber_equipment_3 > 1 } }
	else_if = { limit = { has_tech = strategic_bomber2 }        check_variable = { EAI_VARIANT/strat_bomber_equipment_2 > 1 } }
	else_if = { limit = { has_tech = strategic_bomber1 }        check_variable = { EAI_VARIANT/strat_bomber_equipment_1 > 1 } }
}
