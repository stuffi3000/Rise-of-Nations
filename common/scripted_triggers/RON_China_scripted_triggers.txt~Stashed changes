##### IS CHINA
SHA_is_literally_china = {
	OR = {
		original_tag = CHI
		original_tag = PRC
		original_tag = GXC
		original_tag = YUN
		original_tag = SHX
		original_tag = XSM
		original_tag = SIK
	}
}

