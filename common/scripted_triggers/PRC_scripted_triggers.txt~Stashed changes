PRC_japanese_state_available_for_infiltration_trigger = {
	OR = {
		CONTROLLER = {
			NOT = { has_war_with = ROOT }
			OR = {
				original_tag = MAN
				original_tag = MEN
				original_tag = JAP
			}
		}
		PRC_is_infiltrated_by_PREV = yes
	}
}
