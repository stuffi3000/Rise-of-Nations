			}
		}
	}

	equipment = {

	}
}

infiltration_border = {
	name = infiltration_border
	desc = infiltration_border_desc
	outcome = infiltration_border_outcome
	picture = "GFX_phase_infiltration_border"
	icon = "GFX_phase_infiltration_border_small"

	requirements = {
		FROM = {
			any_neighbor_country = {
				NOT = {
					has_war_with = ROOT
				}
				NOT = {
					has_war_with = FROM
				}
			}
		}
	}

	equipment = {

	}
}

