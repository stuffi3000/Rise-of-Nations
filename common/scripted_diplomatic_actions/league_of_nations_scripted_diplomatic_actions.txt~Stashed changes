				date > 1930.12.31
				has_country_flag = leader_of_league_of_nations
				has_war = no
				NOT = { has_global_flag = league_of_nations_election }
				NOT = { has_global_flag = league_of_nations_voting }
				ROOT = {
					tag = TUR
