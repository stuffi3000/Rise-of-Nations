}

# transport
EAI_TRNS_aircraft_production_strategy = {
	enable = { EAI_TRNS_aircraft_production = yes }
	abort_when_not_enabled = yes

	ai_strategy = { type = equipment_variant_production_factor id = transport_plane_equipment    value = 1 }
}
