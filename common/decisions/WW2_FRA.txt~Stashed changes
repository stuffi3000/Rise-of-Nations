FRA_maginot_build = {
	increase_maginot_funds = {
		visible = {
			original_tag = FRA
			check_variable = {
				FRA.maginot_days_build > 1000
			}
		}
		cost = 100
		days_remove = 50

		complete_effect = {
			if = {
				limit = {
					NOT = {
						has_active_mission = maginot_progress_bar
					}
				}
				FRA = {
					subtract_from_variable = {
						maginot_days_build = 100
					}
				}
			}
			else = {
				add_days_mission_timeout = { mission = maginot_progress_bar days = -100 }
