FRA_nationalisation = {

	FRA_nationalize_industy = {

		icon = generic_construction

		fire_only_once = no

		modifier = {

		}

		days_remove = 90
		days_re_enable = 0

		cost = 0
		ai_will_do = {
			factor = 50
		}

