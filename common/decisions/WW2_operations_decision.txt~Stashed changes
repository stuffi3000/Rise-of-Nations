		icon = generic_army_support

		available = { is_ai = yes
			tag = GER
			date > 1939.1.1
			date < 1941.1.1
			has_war_with = ENG
			OR = {
				has_war_with = DEN
				has_war_with = NOR
			}


		}

		cost = 0

		fire_only_once = yes

		ai_will_do = {
			factor = 1
			modifier = {
				factor = 4000
				has_war_with = NOR
				OR = {
					DEN = { has_capitulated = yes }
					DEN = { is_subject = yes }
					DEN = { exists = no }
				}
			}
		}

		visible = {
			tag = GER
			NOT = { has_idea = ww2_operation }
		}

		complete_effect = {
			country_event = { id = ww2operations.0 }
		}
	}

