	BS_invade_monaco = {
		icon = generic_army_support
		allowed = {

		}

		visible = {
			NOT = { has_government = democratic }
			has_war = yes
			controls_state = 821
			MCO = { controls_state = 825 }

		}

		highlight_states = {
			state = 825
		}

		cost = 40
		days_remove = 10

		ai_will_do = {
			factor = 1
		}
		remove_effect = {
			declare_war_on = {
				target = MCO
				type = annex_everything
			}
		}

