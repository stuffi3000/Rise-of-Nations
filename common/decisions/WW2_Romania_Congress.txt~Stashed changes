ROM_congress = {
	ROM_small_lobby_effort = {
		icon = generic_political_discourse
		available = {
			OR = {
				check_variable = { senators_support < senators_total }
				check_variable = { representatives_support < representatives_total }
			}
			not = {
				has_decision = ROM_medium_lobby_effort
			}
			OR = {
				political_power_daily > 0.3
				has_political_power > 10
			}
		}
		cost = 0
		ai_will_do = {
			factor = 10
			modifier = {
				congress_medium_support_trigger = yes
				factor = 0.5
			}
			modifier = {
				congress_low_support_trigger = yes
				factor = 0.5
			}
			modifier = {
				congress_high_support_trigger = yes
				factor = 0
			}
		}
		modifier = {
			political_power_gain = -0.3
		}
		days_remove = 30
		remove_effect = {
			ROM_congress_small_support = yes
		}
	}
	ROM_medium_lobby_effort = {
