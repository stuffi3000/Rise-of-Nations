	ROM_beat_up_opposition = {
		icon = oppression
		available = {
			has_government = democratic
		}
		#visible = { has_completed_focus = ROM_ally_with_the_silver_shirts }
		cost = 10
		ai_will_do = {
			factor = 1
			modifier = {
