	ROM_invest_in_state_factory = {
		icon = generic_construction
		available = {
			custom_trigger_tooltip = {
				tooltip = ROM_congress_invest_in_state_factory_tt
				any_owned_state = {
					has_state_flag = ROM_congress_build_factory
					check_variable = { factory_goal = industrial_complex_level }
				}
			}
		}
		highlight_states = {
			has_state_flag = ROM_congress_build_factory
		}
		days_mission_timeout = 360
		is_good = no
		activation = {
			any_owned_state = {
				has_state_flag = ROM_congress_build_factory
			}
		}
		timeout_effect = {
			random_owned_state = {
				limit = {
					has_state_flag = ROM_congress_build_factory
				}
				clr_state_flag = ROM_congress_build_factory
				clear_variable = factory_goal
			}

			ROM_congress_small_opposition = yes
			clr_country_flag = ROM_congress_investment
		}
		complete_effect = {
			random_owned_state = {
				limit = {
					has_state_flag = ROM_congress_build_factory
				}
				clr_state_flag = ROM_congress_build_factory
				clear_variable = factory_goal
			}
			ROOT = {
				ROM_congress_medium_support = yes
				clr_country_flag = ROM_congress_investment
			}

		}
	}
