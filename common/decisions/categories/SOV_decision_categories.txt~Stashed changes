SOV_great_patriotic_war = {
	allowed = {
		original_tag = SOV
		SOV = { has_civil_war = no }
		date > 1939.1.1
		date < 1949.1.1
	}
	visible = {
		date > 1932.12.31
		date < 1949.1.1
		OR = {
			has_defensive_war_with = GER
			surrender_progress > 0.2
		}
		#always = yes
	}

}

