SOV_russian_civil_war = {
	allowed = {
		OR = {
			original_tag = SOV
			original_tag = WHR
		}
		has_global_flag = russian_civil_war
	}
	visible_when_empty = yes


}

SOV_cold_war_world = {

	allowed = {
		date > 1932.12.31
		date < 1949.1.1
		original_tag = SOV
	}

	available = {

	}

	visible = {
		date > 1932.12.31
		date < 1949.1.1
		has_completed_focus = SOV_War_Reparations
	}
}




SOV_munich_crisis = {

	allowed = {
		date > 1932.12.31
		date < 1949.1.1
		original_tag = SOV
	}

	available = {
		#has_completed_focus = SOV_move_industry_to_urals
	}

	visible = {
		date > 1932.12.31
		date < 1949.1.1
		GER = {
			focus_progress = {
				focus = GER_demand_sudetenland
				progress > 0.1
			}
		}
		CZE = { owns_state = 69 owns_state = 74 NOT = { has_government = fascism } NOT = { has_country_flag = refused_soviet_help } }
	}
}

