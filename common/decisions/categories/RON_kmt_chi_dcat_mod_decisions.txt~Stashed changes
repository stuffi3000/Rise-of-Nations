KMT_dcat_postal_romanisation = {
	icon = generic

	allowed = {
		date > 1932.12.31
		date < 1949.1.1
		is_chinese_nations = yes
	}

	visible = {
		date > 1932.12.31
		date < 1949.1.1
		is_chinese_nations = yes
		OR = {
			is_ai = no
			NOT = {
				any_country = {
					is_chinese_nations = yes
					is_ai = no
				}
			}
		}
		NOT = {
			any_country = {
				NOT = { tag = ROOT }
				is_chinese_nations = yes
				is_ai = no
			}
		}
		NOT = { has_global_flag = KMT_use_postal_romanisation }
	}
}

