KMT_dcat_rename_reconquered_cities = {
	icon = generic

	allowed = {
		original_tag = CHI
		date > 1932.12.31
		date < 1949.1.1
	}

	visible = {
		date > 1932.12.31
		date < 1949.1.1
		is_chinese_nations = yes

		OR = {
			AND = {
				owns_state = 745
				745 = {
					NOT = {
						has_state_flag = renaming_decided
					}
				}
			}
			AND = {
				owns_state = 328
				NOT = {
					has_global_flag = renaming_decided1567
				}
			}
			AND = {
				owns_state = 716
				NOT = {
					has_global_flag = renaming_decided11771
				}
			}
			AND = {
				owns_state = 524
				NOT = {
					has_global_flag = renaming_decided12068
				}
			}
		}
	}
}

KMT_dcat_liberate_korea = {
	icon = generic_independence

	allowed = {
		original_tag = CHI
		date > 1932.12.31
		date < 1949.1.1
	}

	visible = {
		date > 1932.12.31
		date < 1949.1.1
		NOT = { tag = KOR }
		NOT = { tag = DPK }
		OR = {
			OR = {
				divisions_in_state = {
					state = 527
					size > 0
				}
				controls_state = 527
			}
			OR = {
				divisions_in_state = {
					state = 525
					size > 0
				}
				controls_state = 525
			}
		}
	}
}

