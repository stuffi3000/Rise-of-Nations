FRA_maginot_build = {
	priority = 20
	visible_when_empty = yes
	allowed = {
		date > 1918.1.1
		date < 1933.1.1
		original_tag = FRA

	}

	visible = {
		date > 1918.1.1
		date < 1933.1.1
		NOT = {
			has_global_flag = maginot_built
		}
		OR = {
			has_completed_focus = FRA_INT_start_the_build
			has_completed_focus = FRA_INT_the_maginot_line_funds
		}
	}

}
