usa_stance_over_europe = {
	send_arms_to_CP = {
		fixed_random_seed = no
		available = {
			always = yes
		}
		visible = {
			OR = {
				GER = { has_war = yes }
				AUH = { has_war = yes }
			}
		}
		complete_effect = {
			random_list = {
				75 = {
					add_equipment_to_stockpile = {
						type = convoy_1
						amount = -5

