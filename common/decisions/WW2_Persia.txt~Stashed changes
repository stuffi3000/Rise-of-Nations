PER_pan_iranism_cat = {
	PER_persian_assimilation = {

		cost = 50
		fire_only_once = no
		days_remove = 100

		available = {
			PER = {
				check_variable = {
					var = var_pan_iranism
					value = 20
					compare = greater_than_or_equals
				}
				custom_trigger_tooltip = {
					tooltip = PER_pan_iranism_20_tt
				}
			}
		}

		remove_effect = {
			random_owned_state = {
				limit = { NOT = { is_core_of = PER } }
				add_core_of = PER
			}
		}
		complete_effect = {
			if = { limit = { all_owned_state = { is_core_of = PER } }
				add_manpower = 3000
			}
		}
	}
