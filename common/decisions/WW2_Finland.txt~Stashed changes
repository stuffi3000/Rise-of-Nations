political_actions = {

	fi_reclaim_the_spirit_of_finland = {

		icon = generic_political_discourse

		allowed = {
			tag = FIN
		}

		available = {
			is_in_faction = no

			has_country_flag = finland.50_fired

		}

		cost = 25

		fire_only_once = no

		visible = {
			tag = FIN
			has_country_flag = finland.50_fired
			NOT = { has_idea = fi_spirit_of_finland }
		}

		complete_effect = {
			add_ideas = fi_spirit_of_finland
		}

		ai_will_do = {
			factor = 100
		}
	}

	fi_counter_soviet_propaganda = {

		icon = generic_political_discourse

		allowed = {
			tag = FIN
		}

		available = {

			has_idea = communist_pressure

		}

		cost = 250

		fire_only_once = no

		visible = {
			tag = FIN
			has_idea = communist_pressure
		}

		complete_effect = {
			remove_ideas = communist_pressure
		}

		ai_will_do = {
			factor = 50
			modifier = {
				factor = 0
				has_government = communism

			}
		}
	}


}





