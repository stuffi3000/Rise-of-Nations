		icon = infiltrate_state
		available = {
			political_power_daily > 0.1
		}
		visible = {
			any_owned_state = {
				is_core_of = CSA
				not = { is_core_of = ROOT }
				is_claimed_by = ROOT
			}
			#has_completed_focus = USA_reintegration
		}
		ai_will_do = {
			factor = 1
		}
		days_remove = 120
		cost = 25
		modifier = {
			political_power_gain = -0.1
		}
		complete_effect = {
			random_state = {
				limit = {
					is_controlled_by = ROOT
					is_core_of = CSA
					not = { is_core_of = ROOT }
					is_claimed_by = ROOT
				}
				set_state_flag = USA_state_admit
				custom_effect_tooltip = USA_readmit_state_tt
			}
		}
		remove_effect = {
			USA_congress_add_state = yes
			random_owned_state = {
				limit = { has_state_flag = USA_state_admit }
				ROOT = {
					add_state_core = PREV
				}
				clr_state_flag = USA_state_admit
			}
		}
	}
