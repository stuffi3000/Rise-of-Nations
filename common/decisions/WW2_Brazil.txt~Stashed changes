			has_full_control_of_state = 497
			owns_state = 497
			has_full_control_of_state = 504
			owns_state = 504
		}

		cost = 150
		days_remove = 150 fire_only_once = yes

		ai_will_do = {
			factor = 40
			modifier = {
				political_power_daily < 0.5
				factor = 0
			}
		}

		visible = {
			has_completed_focus = bra_viacao
			NOT = { has_global_flag = bra_viacao_modificadores_flag }
			original_tag = BRA
		}

		modifier = {
			civilian_factory_use = 5
			production_speed_buildings_factor = -0.05
			#politicalpowergainplaceholder
		}

		complete_effect = {
			add_manpower = -5000
			add_command_power = -5
		}

		remove_effect = {

			280 = {
				add_building_construction = {
					type = arms_factory
					level = 2
					instant_build = yes
				}
			}

			497 = {
				add_building_construction = {
					type = arms_factory
					level = 2
