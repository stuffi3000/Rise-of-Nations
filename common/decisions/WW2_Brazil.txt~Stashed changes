		}

		available = {
			has_completed_focus = bra_sem_eixo
			ARG = {
				AND = {
					exists = yes
					is_puppet = no
					is_in_faction = no
					NOT = { has_non_aggression_pact_with = BRA }
					is_neighbor_of = BRA
					NOT = { is_in_faction_with = BRA }
				}
