prospect_for_resources = {
	MEX_Camargo = {
		icon = aluminium
		highlight_states = {
			state = 482
		}
		available = {
			has_tech = excavation3
			num_of_civilian_factories_available_for_projects > 2
			owns_state = 482
			controls_state = 482
		}
		visible = {
			owns_state = 482
			controls_state = 482
			482 = {
				NOT = {
					has_state_flag = Camargo_aluminium_developed
				}
			}
		}
		fire_only_once = yes
		cost = 25
		days_remove = 60
		modifier = {
			civilian_factory_use = 3
		}
		ai_will_do = {
			factor = 1
		}
		remove_effect = {
			482 = { set_state_flag = Camargo_aluminium_developed }
			482 = {
				add_resource = {
					type = aluminium
					amount = 8
				}
			}
		}
	}
	MEX_Lucifer = {
		icon = steel
		highlight_states = {
			state = 484
		}
		available = {
			has_tech = excavation4
			num_of_civilian_factories_available_for_projects > 2
			owns_state = 484
			controls_state = 484
		}
		visible = {
			owns_state = 484
			controls_state = 484
			484 = {
				NOT = {
					has_state_flag = Lucifer_maganese_developed
				}
			}
		}
		fire_only_once = yes
		cost = 25
		days_remove = 60
		modifier = {
			civilian_factory_use = 3
		}
		ai_will_do = {
			factor = 1
		}
		remove_effect = {
			# in arroyo del inferno
			# full of magnetite, maganese, and other ores to make steel
			# has pyrite, which is a good boon for steel production
			# Sweden made in 1936 made 977 thousand metric tons of steel
			# 977000 / 188 (Sweden's in game steel units) = 5196 metric tons per steel unit
			# 26,997.625 long tons of ore yearly
			# translates to 27430.85 metric tons
			482 = { set_state_flag = Camargo_aluminium_developed }
			482 = {
				add_resource = {
					type = steel
					amount = 12
				}
			}
		}
	}
}
