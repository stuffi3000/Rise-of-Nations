aispamcap = {

	##########MAJORS

	aispamcap_1 = {
		icon = generic_propaganda
		visible = {
			is_ai = yes
		}
		available = {
			NOT = { tag = ZOM }
			is_major = yes
			is_subject = no
			num_divisions > 500
			NOT = { has_idea = aispamcap_idea }
		}
		complete_effect = { add_ideas = aispamcap_idea }
		ai_will_do = { factor = 100 }
	}

