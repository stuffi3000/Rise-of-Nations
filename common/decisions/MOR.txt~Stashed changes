MOR_cultural_clash_cat = {
	MOR_convert_dec = {
		state_target = yes
		days_remove = 190
		cost = 100
		icon = generic_nationalism
		target_array = states_to_convert
		on_map_mode = map_only
		available = {
			has_war = no
		}
		fire_only_once = yes
		visible = {
			date < 1918.1.1
			FROM = {
				NOT = {
					is_core_of = ROOT
				}
				is_controlled_by = ROOT
			}
			ROOT = {
				has_completed_focus = MOR_cultural_clash
			}
		}
		remove_effect = {
			FROM = {
				add_core_of = ROOT
			}
		}

		highlight_color_while_active = 8

		complete_effect = {
			FROM = {
				add_resistance = 15
				add_compliance = -10
			}
		}
		modifier = {
			weekly_manpower = -150
		}
	}
}
