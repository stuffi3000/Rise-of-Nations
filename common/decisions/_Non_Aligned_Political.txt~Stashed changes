political_actions = {
	prepare_for_unaligned_civil_war = {

		icon = generic_prepare_civil_war

		available = {
			neutrality > 0.1
			num_of_controlled_states > 1
		}

		visible = {
			neutrality > 0.05
			NOT = { has_government = neutrality }
			NOT = { has_country_flag = preparation_for_unaligned_civil_war }
		}

		fire_only_once = yes

		cost = 50

		complete_effect = {
			set_country_flag = preparation_for_unaligned_civil_war
		}

		ai_will_do = {
			factor = 0
		}
	}

	hold_the_unaligned_national_referendum = {

		icon = generic_political_discourse

		available = {
			neutrality > 0.5
			NOT = { has_government = neutrality }
		}

		visible = {
			NOT = { has_government = neutrality }
			OR = {
				neutrality > 0.6
				has_country_flag = open_up_political_discourse_unaligned
			}
		}

		fire_only_once = yes

		cost = 100

		complete_effect = {
			country_event = { id = political.29 }
		}

		ai_will_do = {
			factor = 210
			modifier = {
				neutrality > 0.6
				factor = 10
			}
		}
	}


	expand_civil_unaligned_support = {

		icon = generic_civil_support

		visible = {
			OR = {
				has_country_flag = preparation_for_unaligned_civil_war
				has_country_flag = open_up_political_discourse_unaligned
			}
			NOT = { has_government = neutrality }
		}

		cancel_trigger = {
			hidden_trigger = {
				has_civil_war = yes
			}
		}

		fire_only_once = no

		cost = 25

		days_remove = 30

		modifier = {
			neutrality_drift = 0.02
			stability_weekly = -0.03
			political_power_gain = -0.2
		}

		ai_will_do = {
			factor = 1
		}
	}

	army_support_for_unaligned_civil_war = {

		icon = generic_army_support

		visible = {
			has_country_flag = preparation_for_unaligned_civil_war
			NOT = { has_government = neutrality }
		}

		cancel_trigger = {
			hidden_trigger = {
				has_civil_war = yes
			}
		}

		fire_only_once = no

		cost = 50

		days_remove = 30

		modifier = {
			command_power_gain = -0.2
		}

		remove_effect = {
			if = {
				limit = {
					check_variable = { var = army_support_var value = 0.1 compare = less_than }
				}
				set_variable = { var = army_support_var value = 0.1 }
			}
			if = {
				limit = {
					check_variable = { var = army_support_var value = 0.1 compare = greater_than_or_equals }
				}
				add_to_variable = { var = army_support_var value = 0.1 }
			}
			set_country_flag = military_support_for_unaligned_civil_war
			custom_effect_tooltip = army_support_TT
		}

		complete_effect = {
		}

		ai_will_do = {
			factor = 0
		}
	}

	ensure_general_loyalty_for_unaligned_civil_war = {

		icon = generic_army_support

		available = {
			has_country_flag = military_support_for_unaligned_civil_war
		}

		visible = {
			has_country_flag = preparation_for_unaligned_civil_war
			NOT = { has_government = neutrality }
			any_army_leader = {
				is_field_marshal = no
				NOT = { has_trait = hidden_sympathies }
			}
		}

		fire_only_once = yes

		cost = 50

		complete_effect = {
			country_event = { id = decisions.1 }
		}

		ai_will_do = {
			factor = 0
		}
	}

	ensure_marshal_loyalty_for_unaligned_civil_war = {

		icon = generic_army_support

		available = {
			has_country_flag = military_support_for_unaligned_civil_war
		}

		visible = {
			has_country_flag = preparation_for_unaligned_civil_war

			NOT = { has_government = neutrality }
			any_army_leader = {
				NOT = { has_trait = hidden_sympathies }
			}
			any_army_leader = {
				is_field_marshal = yes
				NOT = { has_unit_leader_flag = hidden_sympathies_marshal }
			}
		}

		fire_only_once = yes

		cost = 50

		complete_effect = {
			country_event = { id = decisions.2 }
		}

		ai_will_do = {
			factor = 0
		}
	}

	siphon_equipment_stockpiles_for_unaligned_civil_war = {

		icon = generic_prepare_civil_war

		available = {
			has_country_flag = military_support_for_unaligned_civil_war
			has_equipment = { infantry_equipment > 1000 }
			command_power > 2
		}

		visible = {
			has_country_flag = preparation_for_unaligned_civil_war
			has_country_flag = military_support_for_unaligned_civil_war
			NOT = { has_government = neutrality }
		}

		fire_only_once = no

		cost = 50

		complete_effect = {
			add_command_power = -2
			add_equipment_to_stockpile = {
				type = infantry_equipment
				amount = -1000
			}
			set_country_flag = siphoned_equipment_stockpiles_for_civil_war
		}

		ai_will_do = {
			factor = 0
		}
	}

	formulate_surprise_attack_plan_for_unaligned_civil_war = {

		icon = generic_army_support

		available = {
			has_country_flag = military_support_for_unaligned_civil_war
			command_power > 2
		}

		visible = {
			has_country_flag = preparation_for_unaligned_civil_war
			NOT = { has_government = neutrality }
		}

		fire_only_once = yes

		cost = 50

		complete_effect = {
			add_command_power = -2
			custom_effect_tooltip = formulate_surprise_attack_plan_for_civil_war_tt
			set_country_flag = formulated_surprise_attack_plan_for_civil_war
		}

		ai_will_do = {
			factor = 0
		}
	}

	ignite_the_unaligned_civil_war_single_state = {
		icon = generic_ignite_civil_war
		name = ignite_the_unaligned_civil_war

		available = {
			has_stability < 0.5
			fascism > 0.50
		}

		visible = {
			has_country_flag = preparation_for_unaligned_civil_war
			NOT = { has_government = neutrality }
			check_variable = { num_owned_states = 1 }
		}

		fire_only_once = yes

		cost = 50

		complete_effect = {
			set_politics = { ruling_party = neutrality elections_allowed = no }
			clr_country_flag = preparation_for_unaligned_civil_war
			clr_country_flag = military_support_for_unaligned_civil_war
			clr_country_flag = civil_support_for_unaligned_civil_war
		}

		ai_will_do = {
			factor = 0
		}
	}

	ignite_the_unaligned_civil_war = {

		icon = generic_ignite_civil_war

		available = {
			has_stability < 0.5
		}

		visible = {
			has_country_flag = preparation_for_unaligned_civil_war

			NOT = { has_government = neutrality }
			check_variable = { num_owned_states > 1 }
		}

		fire_only_once = yes

		cost = 50

		complete_effect = {
			if = {
				limit = {
					has_government = democratic
				}
				set_variable = {
					var = civil_war_size_var
					value = party_popularity@democratic
				}
			}
			if = {
				limit = {
					has_government = communism
				}
				set_variable = {
					var = civil_war_size_var
					value = party_popularity@communism
				}
			}
			if = {
				limit = {
					has_government = fascism
				}
				set_variable = {
					var = civil_war_size_var
					value = party_popularity@fascism
				}
			}
			subtract_from_variable = {
				var = civil_war_size_var
				value = army_support_var
			}
			if = {
				limit = {
					check_variable = {
						var = civil_war_size_var
						value = 0.3
						compare = less_than
					}
				}
				set_variable = {
					var = civil_war_size_var
					value = 0.3
				}
			}
			start_civil_war = {
				ruling_party = neutrality
				ideology = ROOT
				size = civil_war_size_var
				keep_unit_leaders_trigger = {
					has_trait = hidden_sympathies
				}
			}
			clr_country_flag = preparation_for_unaligned_civil_war
			clr_country_flag = military_support_for_unaligned_civil_war
			clr_country_flag = civil_support_for_unaligned_civil_war
			set_country_flag = ideology_civil_war
		}

		ai_will_do = {
			factor = 0
		}
	}

	rebuild_the_nation_unaligned = {

		icon = generic_construction

		visible = {
			has_government = neutrality
			has_country_flag = won_ideology_civil_war
		}

		fire_only_once = yes

		cost = 25

		days_remove = 365

		modifier = {
			political_power_gain = -1
			industry_repair_factor = 0.20
			production_speed_industrial_complex_factor = 0.1
			production_speed_infrastructure_factor = 0.1
			industrial_capacity_factory = 0.1
			industrial_capacity_dockyard = 0.1
		}

		ai_will_do = {
			factor = 200
		}
	}

	open_up_political_discourse_unaligned = {

		icon = generic_political_discourse

		available = {
			fascism < 0.9
			democratic < 0.9
			communism < 0.9
			neutrality < 0.9
		}

		visible = {
			neutrality > 0.05
			NOT = { has_country_flag = open_up_political_discourse_unaligned }
			NOT = { has_government = neutrality }
		}

		fire_only_once = yes

		cost = 75

		complete_effect = {
			set_country_flag = open_up_political_discourse_unaligned
		}

		ai_will_do = {
			factor = 1
		}
	}

	discredit_government_unaligned = {

		icon = generic_political_discourse

		available = {
			fascism < 0.8
			democratic < 0.8
			communism < 0.8
			neutrality < 0.8
		}

		visible = {
			has_country_flag = open_up_political_discourse_unaligned
			NOT = { has_government = neutrality }
		}

		fire_only_once = yes

		cost = 50

		complete_effect = {
			add_stability = -0.010
			if = {
				limit = {
					has_government = democratic
				}
				add_popularity = {
					ideology = democratic
					popularity = -0.1
				}
			}
			if = {
				limit = {
					has_government = communism
				}
				add_popularity = {
					ideology = communism
					popularity = -0.1
				}
			}
			if = {
				limit = {
					has_government = fascism
				}
				add_popularity = {
					ideology = fascism
					popularity = -0.1
				}
			}
		}

		ai_will_do = {
			factor = 1
		}
	}
}
