			factor = 0
		}

		visible = {
			has_completed_focus = PRU_soviet_help
			SOV = { OR = { has_tech = CAS1 } }
		}

		complete_effect = {
			if = {
				limit = {
					SOV = { has_tech = CAS3 }
				}
				add_equipment_to_stockpile = { type = CAS_equipment_3 amount = 100 producer = SOV }
