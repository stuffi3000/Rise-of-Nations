		allowed = {
			original_tag = PRU
		}

		available = {
			is_puppet = no
		}

		cost = 0

		fire_only_once = no
		days_remove = 0
		days_re_enable = 0

		ai_will_do = {
			factor = 0
		}

		visible = {
			has_completed_focus = PRU_soviet_help
		}

		complete_effect = {
			if = {
				limit = {
					SOV = { has_tech = fighter3 }
				}
				add_equipment_to_stockpile = { type = fighter_equipment_3 amount = 150 producer = SOV }
			}
			else_if = {
				limit = {
					SOV = { has_tech = fighter2 }
				}
				add_equipment_to_stockpile = { type = fighter_equipment_2 amount = 150 producer = SOV }
			}
			else = {
				add_equipment_to_stockpile = { type = fighter_equipment_1 amount = 150 producer = SOV }
			}

			if = {
				limit = {
					has_idea = soviet_influence_5
				}
				hidden_effect = {
					remove_ideas = soviet_influence_5
					set_global_flag = peru_sov
					SOV = { puppet = PRU } news_event = peru.1
				}
			}
			else_if = {
				limit = {
					has_idea = soviet_influence_4
				}
				hidden_effect = {
					swap_ideas = {
						remove_idea = soviet_influence_4
						add_idea = soviet_influence_5
					}
				}
			}
			else_if = {
				limit = {
					has_idea = soviet_influence_3
				}
				hidden_effect = {
					swap_ideas = {
						remove_idea = soviet_influence_3
						add_idea = soviet_influence_4
					}
				}
			}
			else_if = {
				limit = {
					has_idea = soviet_influence_2
				}
				hidden_effect = {
					swap_ideas = {
						remove_idea = soviet_influence_2
						add_idea = soviet_influence_3
					}
				}
			}
			else_if = {
				limit = {
					has_idea = soviet_influence_1
				}
				hidden_effect = {
					swap_ideas = {
						remove_idea = soviet_influence_1
						add_idea = soviet_influence_2
					}
				}
			}
			else = {
				hidden_effect = {
					add_ideas = soviet_influence_1
				}
			}
		}

		modifier = {
		}

		remove_effect = {

		}
	}

	ask_for_cas = {

