PRU_buy_tanks_category = {
	buy_light_tanks = {

		icon = generic_tank

		allowed = {
			original_tag = PRU
		}

		available = {
			has_fuel > 60000
		}

		cost = 0

		fire_only_once = no
		days_remove = 0
		days_re_enable = 0

		ai_will_do = {
			factor = 0
		}

		visible = {
			has_completed_focus = PRU_buy_tanks
			GER = { OR = { has_tech = advanced_light_tank has_tech = improved_light_tank has_tech = basic_light_tank } }
		}

		complete_effect = {
			add_fuel = -60000
			GER = {
				add_fuel = 60000
			}
			if = {
				limit = {
					GER = { has_tech = advanced_light_tank }
				}
				add_equipment_to_stockpile = { type = light_tank_equipment_3 amount = 30 producer = GER }
			}
			else = {
				add_equipment_to_stockpile = { type = light_tank_equipment_2 amount = 30 producer = GER }
			}
		}

		modifier = {
		}

		remove_effect = {

		}
	}

