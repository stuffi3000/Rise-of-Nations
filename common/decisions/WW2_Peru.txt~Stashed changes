PRU_buy_planes_category = {
	buy_fighters = {

		icon = generic_air

		allowed = {
			original_tag = PRU
		}

		available = {
			has_fuel > 60000
		}

		cost = 0

		fire_only_once = no
		days_remove = 0
		days_re_enable = 0

		ai_will_do = {
			factor = 0
		}

		visible = {
			has_completed_focus = PRU_buy_planes
		}

		complete_effect = {
			add_fuel = -60000
			GER = {
				add_fuel = 60000
			}
			if = {
				limit = {
					GER = { has_tech = fighter3 }
				}
				add_equipment_to_stockpile = { type = fighter_equipment_3 amount = 15 producer = GER }
			}
			else_if = {
				limit = {
					GER = { has_tech = fighter2 }
				}
				add_equipment_to_stockpile = { type = fighter_equipment_2 amount = 15 producer = GER }
