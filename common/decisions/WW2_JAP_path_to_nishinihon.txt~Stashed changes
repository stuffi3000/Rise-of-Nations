JAP_MAN_path_to_nishinihon_cat = {
	### TO IMPROVE MAN STABILITY
	JAP_ptn_special_stability_measures_dec = {

		icon = generic_political_discourse

		allowed = {
			original_tag = JAP
		}

		visible = {

		}

		available = {
			MAN = {
				has_stability < 0.35
			}
		}

		fire_only_once = no
		days_re_enable = 60

		modifier = {
			political_power_gain = -0.15
		}

		days_remove = 60

		cost = 15

		complete_effect = {
			MAN = {
				add_political_power = 25
				add_stability = 0.025
			}
		}

		ai_will_do = {
			factor = 1
		}
	}

	### ONLY SELECTABLE IF JAPAN HAS PERIOD OF ECONOMIC GROWTH
	JAP_ptn_use_the_improving_economic_situation_in_japan_dec = {

		icon = generic_construction

		allowed = {
			original_tag = JAP
		}

		visible = {

		}

		available = {

			custom_trigger_tooltip = {
				tooltip = JAP_ptn_use_the_improving_economic_situation_in_japan_dec_TRIG

				OR = {
					has_idea = JAP_period_of_significant_economic_growth_I1
					has_idea = JAP_period_of_significant_economic_growth_I2
					has_idea = JAP_period_of_significant_economic_growth_I3
				}
			}
		}

		fire_only_once = yes

		cost = 15

		complete_effect = {
			MAN = {
				add_political_power = 100
				add_stability = 0.025

				add_offsite_building = { type = industrial_complex level = 2 }

				add_ideas = JAP_ptn_use_the_improving_economic_situation_in_japan_dec_I
			}
		}

		ai_will_do = {
			factor = 1
		}
	}

	### FIRST THREE TO COMPLETE - THEN PROCEED TO CORING
	JAP_ptn_reeducation_campaign_dec = {

		icon = eng_propaganda_campaigns

		allowed = {
			original_tag = JAP
		}

		visible = {

		}

		available = {
			MAN = {
				has_stability > 0.25
				has_war_support    > 0.05
			}
		}

		fire_only_once = yes

		modifier = {
			political_power_gain = -0.25
		}

		days_remove = 365

		cost = 150

		complete_effect = {
			MAN = {
				add_stability = -0.05
				add_war_support = -0.025

				add_timed_idea = {
					idea = JAP_ptn_reeducation_campaign_dec_I
					days = 1825
				}
			}
		}

		remove_effect = {
			custom_effect_tooltip = JAP_ptn_increase_ten_EXPL

			add_to_variable = {
				var = JAP_MAN_ptn_integration_lvl_VAR
				value = 10
			}

			set_country_flag = JAP_ptn_reeducation_campaign_dec_FLAG
		}

		ai_will_do = {
			factor = 1
		}
	}

	JAP_ptn_economical_integration_dec = {

		icon = hol_draw_up_staff_plans

		allowed = {
			original_tag = JAP
		}

		visible = {

		}

		available = {
			has_completed_focus = JAP_MAN_showa_steel_works

			MAN = {
				has_stability > 0.25
				has_war_support    > 0.05
			}
		}

		fire_only_once = yes

		modifier = {
			consumer_goods_factor = 0.10
		}

		days_remove = 365

		cost = 50

		complete_effect = {
			MAN = {
				add_stability = -0.05
			}
		}

		remove_effect = {
			716 = {
				add_extra_state_shared_building_slots = 2
				add_building_construction = {
					type = industrial_complex
					level = 2
					instant_build = yes
				}
				add_resource = {
					type = steel
					amount = 6
				}
				add_resource = {
					type = aluminium
					amount = 4
				}

				set_state_category = large_city
			}
			328 = {
				add_extra_state_shared_building_slots = 1
				add_building_construction = {
					type = industrial_complex
					level = 1
					instant_build = yes
				}
			}
			715 = {
				add_extra_state_shared_building_slots = 1
				add_building_construction = {
					type = industrial_complex
					level = 1
					instant_build = yes
				}
			}

			MAN = {
				add_political_power = -150
				add_stability = -0.05

				give_resource_rights = { receiver = JAP state = 716 }

				add_tech_bonus = {
					name = JAP_ptn_economical_integration_dec
					bonus = 1
					uses = 1
					category = construction_tech
				}
			}

			custom_effect_tooltip = JAP_ptn_increase_ten_EXPL

			add_to_variable = {
				var = JAP_MAN_ptn_integration_lvl_VAR
				value = 10
			}

			set_country_flag = JAP_ptn_economical_integration_dec_FLAG
		}

		ai_will_do = {
			factor = 1
		}
	}

	JAP_ptn_japanese_settlers_dec = {

		icon = generic_decision

		allowed = {
			original_tag = JAP
		}

		available = {
			num_of_civilian_factories_available_for_projects > 10

			MAN = {
				has_stability > 0.25
				has_war_support    > 0.05
			}
		}

		visible = {

		}

		fire_only_once = yes

		modifier = {
			civilian_factory_use = 10
			MONTHLY_POPULATION = -0.05
		}

		days_remove = 120

		cost = 50

		complete_effect = {
			MAN = {
				add_stability = -0.025
				add_war_support = -0.01
			}
		}

		remove_effect = {
			MAN = {
				add_stability = -0.025

				every_owned_state = {
					add_extra_state_shared_building_slots = 1

					add_manpower = 5000
				}
			}

			custom_effect_tooltip = JAP_ptn_increase_ten_EXPL

			add_to_variable = {
				var = JAP_MAN_ptn_integration_lvl_VAR
				value = 10
			}

			set_country_flag = JAP_ptn_japanese_settlers_dec_FLAG
		}

		ai_will_do = {
			factor = 1
		}
	}



	### INTEGRATION DECISION
	JAP_ptn_manchurian_integration_effort_dec = {

		icon = eng_propaganda_campaigns

		allowed = {
			original_tag = JAP
		}

		visible = {

		}

		available = {
			has_country_flag = JAP_ptn_reeducation_campaign_dec_FLAG
			has_country_flag = JAP_ptn_economical_integration_dec_FLAG
			has_country_flag = JAP_ptn_japanese_settlers_dec_FLAG

			MAN = {
				has_stability > 0.25
				has_war_support    > 0.05
			}
		}

		fire_only_once = no

		cost = 25

		days_remove = 60

		complete_effect = {
			MAN = {
				add_stability = -0.01
				add_popularity = {
					ideology = fascism
					popularity = 0.01
				}
			}
		}

		modifier = {
			political_power_gain = -0.25
		}

		remove_effect = {
			MAN = {
				add_political_power = 25
				add_stability = -0.025
				add_popularity = {
					ideology = fascism
					popularity = 0.01
				}

				if = {
					limit = {
						NOT = {
							has_idea = JAP_ptn_japanese_integration_I
						}
					}

					add_ideas = JAP_ptn_japanese_integration_I

					custom_effect_tooltip = JAP_ptn_manchurian_integration_effort_dec_EXPL
				}
			}

			custom_effect_tooltip = JAP_ptn_increase_up_to_ten_EXPL

			set_temp_variable = { JAP_MAN_ptn_integration_to_add_VAR = random }
			multiply_temp_variable = { JAP_MAN_ptn_integration_to_add_VAR = 10 }
			round_variable = JAP_MAN_ptn_integration_to_add_VAR
			clamp_temp_variable = {
				var = JAP_MAN_ptn_integration_to_add_VAR
				max = 10
				min = 3
			}

			add_to_variable = {
				var = JAP_MAN_ptn_integration_lvl_VAR
				value = JAP_MAN_ptn_integration_to_add_VAR
			}
		}

		ai_will_do = {
			factor = 1
		}
	}

	JAP_ptn_put_manchurian_commanders_under_kato_army_dec = {

		icon = generic_army_support

		allowed = {
			original_tag = JAP
		}

		visible = {

		}

		available = {
			custom_trigger_tooltip = {
				tooltip = JAP_MAN_ptn_integration_lvl_greater_than_50_TRIG

				check_variable = {
					var = JAP_MAN_ptn_integration_lvl_VAR
					value = 50
					compare = greater_than_or_equals
				}
			}
		}

		fire_only_once = yes

		cost = 50

		complete_effect = {
			MAN = {
				add_war_support = -0.05

				every_army_leader = {
					set_nationality = JAP
				}
			}
		}

		ai_will_do = {
			factor = 1
		}
	}

	JAP_ptn_proclaim_the_nishinihon_dec = {

		icon = generic_form_nation

		allowed = {
			original_tag = JAP
		}

		visible = {

		}

		available = {
			custom_trigger_tooltip = {
				tooltip = JAP_MAN_ptn_integration_lvl_greater_than_75_TRIG

				check_variable = {
					var = JAP_MAN_ptn_integration_lvl_VAR
					value = 75
					compare = greater_than_or_equals
				}
			}
		}

		fire_only_once = yes

		cost = 150

		complete_effect = {
			add_threat = 5

			add_stability = -0.1

			annex_country = {
				target = MAN
				transfer_troops = yes
			}

			if = {
				limit = {
					check_variable = {
						var = JAP_MAN_ptn_integration_lvl_VAR
						value = 75
						compare = less_than
					}
				}
				custom_effect_tooltip = JAP_MAN_ptn_is_under_95_EXPL

				add_political_power = -250
				add_stability = -0.25
				add_war_support = -0.25
			}
			if = {
				limit = {
					check_variable = {
						var = JAP_MAN_ptn_integration_lvl_VAR
						value = 75
						compare = greater_than_or_equals
					}
					check_variable = {
						var = JAP_MAN_ptn_integration_lvl_VAR
						value = 80
						compare = less_than
					}
				}
				custom_effect_tooltip = JAP_MAN_ptn_is_under_95_EXPL

				add_political_power = -200
				add_stability = -0.20
				add_war_support = -0.20
			}
			if = {
				limit = {
					check_variable = {
						var = JAP_MAN_ptn_integration_lvl_VAR
						value = 80
						compare = greater_than_or_equals
					}
					check_variable = {
						var = JAP_MAN_ptn_integration_lvl_VAR
						value = 85
						compare = less_than
					}
				}
				custom_effect_tooltip = JAP_MAN_ptn_is_under_95_EXPL

				add_political_power = -150
				add_stability = -0.15
				add_war_support = -0.15
			}
			if = {
				limit = {
					check_variable = {
						var = JAP_MAN_ptn_integration_lvl_VAR
						value = 85
						compare = greater_than_or_equals
					}
					check_variable = {
						var = JAP_MAN_ptn_integration_lvl_VAR
						value = 90
						compare = less_than
					}
				}
				custom_effect_tooltip = JAP_MAN_ptn_is_under_95_EXPL

				add_political_power = -100
				add_stability = -0.10
				add_war_support = -0.10
			}
			if = {
				limit = {
					check_variable = {
						var = JAP_MAN_ptn_integration_lvl_VAR
						value = 90
						compare = greater_than_or_equals
					}
					check_variable = {
						var = JAP_MAN_ptn_integration_lvl_VAR
						value = 95
						compare = less_than
					}
				}

				custom_effect_tooltip = JAP_MAN_ptn_is_under_95_EXPL

				add_political_power = -50
				add_stability = -0.05
				add_war_support = -0.05
			}
		}

		ai_will_do = {
			factor = 1
		}
	}
}
