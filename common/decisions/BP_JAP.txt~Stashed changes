JAP_greater_east_asian_co_prosperity_sphere = {
	#### Inner Mongolia ####
	JAP_inner_mongolia = {

		icon = jap_conquer_china

		fire_only_once = yes
		cost = 10

		allowed = {
			tag = JAP
		}

		available = {
			621 = { is_controlled_by_ROOT_or_ally = yes }
			746 = { is_controlled_by_ROOT_or_ally = yes }
			616 = { is_controlled_by_ROOT_or_ally = yes }
			756 = { is_controlled_by_ROOT_or_ally = yes }
		}

		visible = {
			OR = {
				has_government = fascism
				has_government = neutrality
			}
			MEN = { is_in_faction_with = JAP }
			OR = {
				has_war_with = CHI
				CHI = { is_subject_of = JAP }
				CHI = { exists = no }
			}
		}

		ai_will_do = {
			factor = 0
			modifier = {
				add = 100
				OR = {
					SHX = { exists = no }
					SHX = { has_capitulated = yes }
					SHX = { is_subject_of = JAP }
				}
				OR = {
					PRC = { exists = no }
					PRC = { has_capitulated = yes }
					PRC = { is_subject_of = JAP }
				}
				OR = {
					XSM = { exists = no }
					XSM = { has_capitulated = yes }
					XSM = { is_subject_of = JAP }
				}
			}
		}

		complete_effect = {
			MEN = {
				transfer_state = 621
				transfer_state = 746
				transfer_state = 616
				transfer_state = 756
				hidden_effect = {
					621 = { add_core_of = MEN }
					746 = { add_core_of = MEN }
					616 = { add_core_of = MEN }
					756 = { add_core_of = MEN }
				}
			}
		}
	}
