	#### Investment in China: Step Three ####
	JAP_investment_in_china3 = {

		icon = generic_construction

		fire_only_once = yes
		cost = 50

		allowed = {
			tag = JAP
		}

		available = {
			custom_trigger_tooltip = {
				tooltip = Japan_finish_destiny_of_China_tt
				OR = {
					has_country_flag = BP_united_china
					has_country_flag = BP_divided_china
					has_country_flag = BP_qin_china
				}
			}
		}

		visible = {
			OR = {
				has_government = fascism
				has_government = neutrality
			}
			has_country_flag = investment_in_china3
		}

		ai_will_do = {
			factor = 10
		}

		days_remove = 120

		modifier = {
			civilian_factory_use = 10
		}

		remove_effect = {
			set_country_flag = investment_in_china4
			every_country = {
				limit = {
					is_subject_of = JAP
					OR = {
						tag = CHI
						tag = SHX
						tag = XSM
						tag = SIC
						tag = HNN
						tag = YUN
						tag = GXC
					}
				}
				country_event = { id = BP_china.5 }
				if = {
					limit = {
						has_idea = JAP_investments3
					}
					swap_ideas = {
						remove_idea = JAP_investments3
						add_idea = JAP_investments4
					}
				}
			}
			if = {
				limit = {
					has_country_flag = BP_divided_china
				}
				# N.China
				random_state = {
					limit = {
						CHI = {
							has_full_control_of_state = PREV
							is_subject_of = JAP
						}
						free_building_slots = {
							building = industrial_complex
							size > 1
							include_locked = yes
						}
					}
					add_extra_state_shared_building_slots = 1
					add_building_construction = {
						type = industrial_complex
						level = 1
						instant_build = yes
					}
				}
				# Shanxi
				random_state = {
					limit = {
						SHX = {
							has_full_control_of_state = PREV
							is_subject_of = JAP
						}
						free_building_slots = {
							building = industrial_complex
							size > 1
