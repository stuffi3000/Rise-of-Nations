	JAP_guardian_of_INS = {

		icon = jap_pacific_guardian

		available = {
			INS = {
				is_subject_of = HOL
			}
		}

		visible = {

		}

		fire_only_once = yes


		modifier = {

		}

		days_remove = 0
		days_re_enable = 0

		cost = 150

		ai_will_do = {
			factor = 1
		}

		complete_effect = {
			HOL = { country_event = umc_jcd.200 }

			custom_effect_tooltip = UMC_accept_offer_tt

			effect_tooltip = {
				HOL = {
					add_stability = 0.05

					add_offsite_building = { type = industrial_complex level = 2 }
					add_offsite_building = { type = arms_factory level = 2 }
				}

				INS = {
					add_political_power = 100
					set_stability = 0.25
					set_war_support = 0.25

					add_equipment_to_stockpile = {
						type = infantry_equipment_0
						amount = 2500
						producer = HOL
					}

					add_equipment_to_stockpile = {
						type = support_equipment
						amount = 50
						producer = HOL
					}

					add_equipment_to_stockpile = {
						type = artillery_equipment_1
						amount = 50
						producer = HOL
					}

					give_resource_rights = { receiver = HOL state = 672 }
					give_resource_rights = { receiver = HOL state = 334 }

					transfer_navy = {
						target = HOL
					}

					add_ideas = JCD_INS_pg_owned_industry_I4

					set_cosmetic_tag = INS_cosm_pg
				}

				puppet = INS
			}
		}
	}

	JCD_INS_build_up_army_dec = {

		icon = generic_prepare_civil_war

		available = {
			has_completed_focus = JCD_nation_building

			INS = {
				OR = {
					is_in_faction_with = JAP
					is_subject_of = JAP
				}
			}
		}

		visible = {
			INS = {
				OR = {
					is_in_faction_with = JAP
					is_subject_of = JAP
				}
			}
		}

		fire_only_once = yes


		modifier = {

		}

		days_remove = 60
		days_re_enable = 0

		ai_will_do = {
			factor = 1
		}

		custom_cost_trigger = {
			has_army_experience > 25
		}
		custom_cost_text = UMC_army_xp_more_than_25

		complete_effect = {
			army_experience = -25
		}

		remove_effect = {
			add_political_power = 25

			army_experience = 10

			random_state = {
				limit = {
					INS = { has_full_control_of_state = PREV }
					is_core_of = INS
					free_building_slots = {
						building = industrial_complex
						size > 0
						include_locked = yes
					}
				}
				add_extra_state_shared_building_slots = 2
				add_building_construction = {
					type = arms_factory
					level = 2
					instant_build = yes
				}
			}

			INS = {
				add_equipment_to_stockpile = {
					type = infantry_equipment
					amount = 2500
					producer = JAP
				}

				add_tech_bonus = {
					name = CHI_wargaming_division
					bonus = 0.5
					uses = 1
					category = land_doctrine
				}
			}
		}
	}

