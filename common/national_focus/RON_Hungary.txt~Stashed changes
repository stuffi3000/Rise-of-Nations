					if = { limit = { NOT = { 819 = { has_state_flag = HUN_claim_forbidden } } } add_state_core = 819 }        #Szeklerland
					if = { limit = { NOT = { 806 = { has_state_flag = HUN_claim_forbidden } } } add_state_claim = 806 }        #Maramaros
					if = { limit = { NOT = { 807 = { has_state_flag = HUN_claim_forbidden } } } add_state_claim = 807 }        #Northern Partium
