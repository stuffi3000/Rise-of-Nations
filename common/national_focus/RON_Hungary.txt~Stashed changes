focus_tree = {
	id = RON_Hungary

	country = {
		factor = 0

		modifier = {
			add = 10
			original_tag = HUN
		}

		modifier = {
			add = 10
			tag = HUN
		}
	}

	default = no

	continuous_focus_position = { x = 50 y = 1200 }


	###############################################################################################################################
	###############################################################################################################################
