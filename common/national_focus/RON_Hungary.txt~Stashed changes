					if = { limit = { NOT = { 664 = { has_state_flag = HUN_claim_forbidden } } } add_state_core = 664 }        #Southern Slovakia
					if = { limit = { NOT = { 71 = { has_state_flag = HUN_claim_forbidden } } } add_state_claim = 71 }        #Eastern Slovakia
					if = { limit = { NOT = { 818 = { has_state_flag = HUN_claim_forbidden } } } add_state_claim = 818 }        #Sobrance
					if = { limit = { NOT = { 70 = { has_state_flag = HUN_claim_forbidden } } } add_state_claim = 70 }        #Western Slovakia
					if = { limit = { NOT = { 797 = { has_state_flag = HUN_claim_forbidden } } } add_state_claim = 797 }    #Burgenland
					if = { limit = { NOT = { 801 = { has_state_flag = HUN_claim_forbidden } } } add_state_claim = 801 }    #Fiume
					if = { limit = { NOT = { 109 = { has_state_flag = HUN_claim_forbidden } } } add_state_claim = 109 }        #Slavonia
					if = { limit = { NOT = { 803 = { has_state_flag = HUN_claim_forbidden } } } add_state_claim = 803 }        #Croatia
					if = { limit = { NOT = { 813 = { has_state_flag = HUN_claim_forbidden } } } add_state_claim = 813 }        #Pag
