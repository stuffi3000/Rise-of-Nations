						OWNER = { OVERLORD = { tag = YUG } }
					}
				}
			}
			if = {
				limit = { has_country_flag = HUN_realism }
				has_army_manpower = { size > 799999 }
			}
			if = {
				limit = { NOT = { has_country_flag = HUN_realism } }
				custom_trigger_tooltip = {
					tooltip = HUN_strong_or_powerful_friends
					is_powerful_or_has_strong_friends_in_europe = yes
				}
			}
		}
		bypass = {
			owns_state = 45        #Novi Sad
			owns_state = 868    #Muraköz
			YUG = { exists = no }
		}
		x = 3
		y = 1
		relative_position_id = HUN_reassert_old_claims
		cost = 10
		ai_will_do = {
			factor = 50
			modifier = {
				factor = 0
				is_historical_focus_on = yes
			}
		}

		select_effect = {
			YUG = {
				if = {
					limit = { NOT = { has_country_flag = HUN_warned_about_hungarian_ambitions } }
					news_event = { id = hun_news.20 }
					set_country_flag = HUN_warned_about_hungarian_ambitions
				}
			}
		}

