#Bastion of Democracy
focus = {
	id = USAIW_bastion_of_democracy
	icon = GFX_USA_the_wilsonian_vision
	x = 20
	y = 3
	cost = 7
	search_filters = {
		FOCUS_FILTER_POLITICAL
	}
	ai_will_do = {
		factor = 10
	}
	allow_branch = {
		date > 1918.12.31
		date < 1933.1.1
	}

	available = {
		has_government = democratic
	}

	mutually_exclusive = {
		focus = USAIW_america_first
		focus = USAIW_red_unions

	}

	completion_reward = {
		add_political_power = 150
	}

}


