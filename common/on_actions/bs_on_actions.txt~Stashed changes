on_actions = {
	on_capitulation = {
		effect = {

			if = {
				limit = {
					ROOT = {
						tag = DAN
					}
				}
				85 = { remove_core_of = DAN }
				FROM = { annex_country = { target = DAN } }
			}

			if = {
				limit = {
					ROOT = {
						original_tag = GER
						has_government = fascism
						has_civil_war = no
					}
				}
				GER = {
					country_event = { id = bs.12 }
				}
			}

		}
	}

	on_uncapitulation = {
		effect = {
			if = {
				limit = {
					original_tag = GER
					has_government = fascism
					is_puppet = no
				}
				drop_cosmetic_tag = yes
			}
		}
	}

	on_declare_war = {
		effect = {
			if = {
				limit = {
					ROOT = {
						original_tag = GER
					}
					FROM = {
						tag = DAN
					}
				}
				DAN = {
					country_event = { hours = 0 id = bshistory.10 }
				}
			}
		}
	}

	on_state_control_changed = {
		effect = {
			if = {
				limit = {
					FROM.FROM = { state = 889 }
					NOT = { has_global_flag = occupied_schutzzone }
					ROOT = {
						tag = SLO
						is_puppet_of = GER
						has_government = fascism
					}
				}
				set_global_flag = schutzzone_treaty
			}
		}
	}

	on_startup = {
		effect = {
			GER = { set_capital = 1105 }
			# Game Rules - BS_extra
			if = {
				limit = {
					has_game_rule = {
						rule = allow_bs_extra
						option = BS_BLOCKED
					}
				}
				SPR = {
					annex_country = {
						target = ADR
						transfer_troops = no
					}
					annex_country = {
						target = TGR
						transfer_troops = no
					}
				}
				FRA = {
					annex_country = {
						target = MCO
						transfer_troops = no
					}
				}
				ITA = {
					annex_country = {
						target = SMR
						transfer_troops = no
					}
					annex_country = {
						target = VCT
						transfer_troops = no
					}
				}
				POL = {
					annex_country = {
						target = DAN
						transfer_troops = no
					}
				}
				SWI = {
					annex_country = {
						target = LIE
						transfer_troops = no
					}
				}
				ENG = {
					annex_country = {
						target = EGY
						transfer_troops = no
					}
					annex_country = {
						target = HKG
						transfer_troops = yes
					}
				}
			}
			if = {
				limit = {
					has_game_rule = {
						rule = allow_bs_extra
						option = BS_BLOCKED
					}
					NOT = {
						has_game_rule = {
							rule = americas_colonization_status
							option = AMERICAS_DECOLONIZED
						}
					}
				}
				DEN = {
					annex_country = {
						target = ICE
					}
				}
			}
		}
	}

	on_puppet = {
		effect = {
			if = {
				limit = {
					AND = {
						TAG = GRE
						is_subject_of = GER
						GER = { has_government = fascism }
					}
				}
				set_cosmetic_tag = GRE_GER

				create_country_leader = {
					name = "Konstantinos Logothetopoulos"
					desc = "POLITICS_KONSTANTINOS_LOGOTHETOPOULOS_DESC"
					picture = "Portrait_Greece_Konstantinos_Logothetopoulos.dds"
					expire = "1965.1.1"
					ideology = fascism_ideology
					traits = {
						great_war_hero
					}
				}
			}

		}
	}

	on_release_as_puppet = {
		effect = {
			if = {
				limit = {
					AND = {
						TAG = GRE
						is_subject_of = GER
						GER = { has_government = fascism }
					}
				}
				set_cosmetic_tag = GRE_GER

				create_country_leader = {
					name = "Konstantinos Logothetopoulos"
					desc = "POLITICS_KONSTANTINOS_LOGOTHETOPOULOS_DESC"
					picture = "Portrait_Greece_Konstantinos_Logothetopoulos.dds"
					expire = "1965.1.1"
					ideology = fascism_ideology
					traits = {
						great_war_hero
					}
				}
			}
		}
	}
}
