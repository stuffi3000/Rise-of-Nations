	makeshift_bridges = {
		name = ABILITY_MAKESHIFT_BRIDGES
		desc = ABILITY_MAKESHIFT_BRIDGES_DESC

		type = army_leader

		allowed = {
			has_ability = makeshift_bridges
			is_border_war = no
		}


		unit_modifiers = {
			river_crossing_factor = -0.4
			river = {
				attack = 0.2
			}
		}

		cost = 0.1
		duration = 168

		one_time_effect = {
			if = { limit = { FROM = { has_country_flag = EAI_logging } } log = "[GetYear] [GetMonth] | AI | [From.GetName] | Used ability: makeshift_bridges" }
		}

		ai_will_do = { #EAI
			factor = -1
			modifier = {
				FROM = {
					command_power > 2.0
				}

				set_temp_variable = { EAI_fraction_units_river = num_units_crossing_river }
				divide_temp_variable = { EAI_fraction_units_river = num_units }
				check_variable = { EAI_fraction_units_river > 0.5 }

				set_temp_variable = { EAI_fraction_units_combat = num_units_offensive_combats }
				divide_temp_variable = { EAI_fraction_units_combat = num_units }
				OR = {
					AND = { check_variable = { EAI_fraction_units_combat > 0.5 } }
					AND = { FROM = { command_power > 90 } check_variable = { EAI_fraction_units_combat > 0.25 } }
				}

				add = 4
			}
			modifier = {
				add = 4

				FROM = {
					command_power > 90
				}

				check_variable = { num_units_crossing_river > 5 }
				check_variable = { num_units_offensive_combats > 5 }
			}
		}
	}

