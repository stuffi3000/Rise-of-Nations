ability = {
	force_attack = {
		name = ABILITY_FORCE_ATTACK
		desc = ABILITY_FORCE_ATTACK_DESC

		sound_effect = command_power_ability_offensive

		type = army_leader

		allowed = {
			is_leading_army_group = no
			is_border_war = no

			#OWNER = {
			#	if = {
			#		limit = {
			#			has_dlc = "Waking the Tiger"
			#		}
			#		NOT = { has_completed_focus = CHI_dare_to_die_corps }
			#	}
			#}
		}

		ai_will_do = { #EAI
			factor = -1

			modifier = {
				FROM = {
					has_war_support > 0.4
					command_power > 55
					has_manpower > 100000
					has_equipment = { infantry_equipment > 1000 }
				}

				set_temp_variable = { EAI_fraction_units_combat = num_units_offensive_combats }
				divide_temp_variable = { EAI_fraction_units_combat = num_units }
				OR = {
					AND = { check_variable = { EAI_fraction_units_combat > 0.5 } }
					AND = { FROM = { command_power > 90 } check_variable = { EAI_fraction_units_combat > 0.25 } }
				}

				OR = {
					check_variable = { avg_offensive_combat_status < 0.5 }
					FROM = { command_power > 75 }
				}

				add = 2
			}

			modifier = {
				add = -2

				FROM = {
					original_tag = SOV
					has_war_with = GER
					surrender_progress > 0
				}

				date < 1943.1.1
			}
		}

		cost = 0.22
		duration = 168

		one_time_effect = {
			add_temporary_buff_to_units = {
				combat_offense = 0.2
				combat_breakthrough = 0.25
				org_damage_multiplier = -0.8 #EAI -1.0
				str_damage_multiplier = 0.6
				war_support_reduction_on_damage = 0.2
				cannot_retreat_while_attacking = 1.0

				days = 7
				tooltip = ABILITY_FORCE_ATTACK_TOOLTIP
			}

			if = { limit = { FROM = { has_country_flag = EAI_logging } } log = "[GetYear] [GetMonth] | AI | [From.GetName] | Used ability: force_attack" }
		}
	}

	last_stand = {
		name = ABILITY_LAST_STAND
		desc = ABILITY_LAST_STAND_DESC

		sound_effect = command_power_ability_offensive

		type = army_leader

		allowed = {

			is_leading_army_group = no
			is_border_war = no
			#OWNER = {
			#	NOT = { has_completed_focus = JAP_warrior_spirit }
			#}
		}

		cost = 0.22
		duration = 168

		one_time_effect = {
			add_temporary_buff_to_units = {
				combat_defense = 0.2
				combat_entrenchment = 0.25
				org_damage_multiplier = -0.8 #EAI -1.0
				str_damage_multiplier = 0.6
				war_support_reduction_on_damage = 0.2
				cannot_retreat_while_defending = 1.0

				days = 7
				tooltip = ABILITY_LAST_STAND_TOOLTIP
			}

			if = { limit = { FROM = { has_country_flag = EAI_logging } } log = "[GetYear] [GetMonth] | AI | [From.GetName] | Used ability: last_stand" }
		}

		ai_will_do = { #EAI
			factor = -1

			modifier = {
				FROM = {
					has_war_support > 0.4
					command_power > 55
					has_manpower > 10000
					OR = {
						has_equipment = { infantry_equipment > 1000 }
						surrender_progress > 0.5
					}
				}

				set_temp_variable = { EAI_fraction_units_combat = num_units_defensive_combats }
				divide_temp_variable = { EAI_fraction_units_combat = num_units }
				OR = {
					AND = { check_variable = { EAI_fraction_units_combat > 0.5 } }
					AND = { FROM = { command_power > 90 } check_variable = { EAI_fraction_units_combat > 0.25 } }
				}

				OR = {
					check_variable = { avg_defensive_combat_status < 0.5 }
					FROM = { command_power > 75 }
				}

				add = 2
			}

			modifier = {
				add = -2

				FROM = {
					original_tag = GER
					has_war_with = SOV
					NOT = { surrender_progress > 0 }
				}

				date < 1943.1.1
			}

			modifier = { # ethiopia too op
				add = -2

				FROM = {
					date < 1940.1.1
					original_tag = ETH
					has_war_with = ITA
					ITA = { is_ai = yes }
				}
			}
		}
	}
	gas_attack = {
		name = ABILITY_GAS_ATTACK
		desc = ABILITY_GAS_ATTACK_DESC

		sound_effect = command_power_ability_offensive

		type = army_leader
		allowed = {
			FROM = { has_tech = chemical_research2 }
		}
		cost = 0.3
		duration = 76
		one_time_effect = {
			add_temporary_buff_to_units = {
				combat_breakthrough = 0.3
				days = 3
				tooltip = ABILITY_GAS_ATTACK_TOOLTIP
			}
			if = { limit = { FROM = { has_country_flag = EAI_logging } } log = "[GetYear] [GetMonth] | AI | [From.GetName] | Used ability: gas_attack" }

		}


		ai_will_do = {
			base = -1
			modifier = {
				add = 2
				FROM = {
					original_tag = GER
					has_war_with = FRA
					date < 1919.1.1
					813 = {
						is_controlled_by = FROM
					}
				}

			}

		}

	}
	staff_office_plan = {
		name = ABILITY_STAFF_OFFICE_PLAN
		desc = ABILITY_STAFF_OFFICE_PLAN_DESC

		sound_effect = command_power_ability_defensive

		type = army_leader

		allowed = {
			is_border_war = no
		}

		cost = 0.12
		duration = 168

		unit_modifiers = {
			planning_speed = 4.0
		}

		one_time_effect = {
			if = { limit = { FROM = { has_country_flag = EAI_logging } } log = "[GetYear] [GetMonth] | AI | [From.GetName] | Used ability: staff_office_plan" }
		}


		ai_will_do = { #EAI
			factor = -1

			modifier = {
				add = 2

				FROM = {
					command_power > 90
				}

				check_variable = { avg_unit_planning_ratio < 0.5 }
				check_variable = { unit_ratio_ready_for_plan > 0.5 }
			}
		}
	}


	siege_artillery = {
		name = ABILITY_SIEGE_ARTILLERY
		desc = ABILITY_SIEGE_ARTILLERY_DESC

		type = army_leader

		allowed = {
			has_ability = siege_artillery
			is_border_war = no
		}

		unit_modifiers = {
			fort = {
				attack = 0.2
			}
			fortification_damage = 2.0
			fortification_collateral_chance = 2.0
		}
		cost = 0.1
		duration = 168

		one_time_effect = {
			if = { limit = { FROM = { has_country_flag = EAI_logging } } log = "[GetYear] [GetMonth] | AI | [From.GetName] | Used ability: siege_artillery" }
		}


		ai_will_do = { #EAI
			factor = -1
			modifier = {
				FROM = {
					command_power > 1.5
				}

				set_temp_variable = { EAI_fraction_units_combat = num_units_offensive_combats_against@fort }
				divide_temp_variable = { EAI_fraction_units_combat = num_units }
				OR = {
					AND = { check_variable = { EAI_fraction_units_combat > 0.5 } }
					AND = { FROM = { command_power > 90 } check_variable = { EAI_fraction_units_combat > 0.25 } }
				}

				add = 2
			}
		}
	}

