defined_text = {
	name = JAP_N_kor_political_map_color

	text = {
		trigger = {

			check_variable = {
				JAP.avg_N_kor_support < 33
			}
		}
		localization_key = GFX_JAP_N_kor_red

	}
	text = {
		trigger = {

			check_variable = {
				JAP.avg_N_kor_support > 32.9
				JAP.avg_N_kor_support < 66
			}
		}
		localization_key = GFX_JAP_N_kor_yellow

	}
	text = {
		trigger = {

			check_variable = {
				JAP.avg_N_kor_support > 65.9
			}
		}
		localization_key = GFX_JAP_N_kor_green

	}
}

