	name = toggle_news_text_loc
	text = {
		trigger = {
			has_global_flag = NEWS_ALL
		}
		localization_key = toggle_news_text_all
	}
	text = {
		trigger = {
			has_global_flag = NEWS_SOME
		}
		localization_key = toggle_news_text_regional
	}
	text = {
		trigger = {
			NOT = {
				has_global_flag = NEWS_ALL
