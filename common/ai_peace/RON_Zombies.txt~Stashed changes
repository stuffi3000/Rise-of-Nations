	# ROOT = Taker, FROM = Giver
	annex = {
		factor = 1000
	}

	# ROOT = Taker, FROM = Liberated
	liberate = {
		factor = 0
	}

	# ROOT = Taker, FROM = Giver
	puppet = {
		factor = 0
	}

	# ROOT = Taker, FROM = State
	take_states = {
		factor = 0
	}

	# ROOT = Taker, FROM = Giver
