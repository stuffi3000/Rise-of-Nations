				#has_country_flag = tax_extreme
				#}
			}

			modifier = {
				training_time_army_factor = 0.20
				army_org_factor = 0.15
				army_morale_factor = 0.15
			}


			ai_will_do = {
				factor = 0
			}

			cancel_if_invalid = no
		}
	}
