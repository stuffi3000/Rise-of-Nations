army_cleanup_huge = {
	hidden_effect = {
		random_country = {
			limit = {
				AND = {
					country_exists = THIS
					is_ai = yes

					OR = {
						tag = MCO
						tag = ADR
						tag = LIE
						tag = DEL
						tag = VCT
						tag = LUX
						tag = LON
						tag = SMR
						tag = TGR
					}
				}
			}
			every_country = {
				limit = {
					NOT = {
						tag = MCO
						tag = ADR
						tag = LIE
						tag = DEL
						tag = VCT
						tag = LUX
						tag = LON
						tag = SMR
						tag = TGR

					}
				}
				transfer_units_fraction = {
					target = PREV
					size = 0.5
					stockpile_ratio = 0.5
					army_ratio = 0.5
					navy_ratio = 0.5
					air_ratio = 0.5


				}

			}
			random_country = {
				limit = {
					NOT = {
						tag = MCO
						tag = ADR
						tag = LIE
						tag = DEL
						tag = VCT
						tag = LUX
						tag = LON
						tag = SMR
						tag = TGR

					}
				}
				set_country_flag = army_desertion

				annex_country = { target = PREV transfer_troops = no }
				release = PREV
			}
		}
	}
}
