Clean_up_ideology = {

	if = {
		limit = {
			has_idea = nationalism
		}
		remove_ideas = nationalism
	}
	if = {
		limit = {
			has_idea = internationalism
		}
		remove_ideas = internationalism
	}
	if = {
		limit = {
			has_idea = fascist_influence
		}
		remove_ideas = fascist_influence
	}
	if = {
		limit = {
			has_idea = communist_influence
		}
		remove_ideas = communist_influence
	}
	if = {
		limit = {
			has_idea = democratic_influence
		}
		remove_ideas = democratic_influence
	}
	if = {
		limit = {
			has_idea = neutrality_influence
		}
		remove_ideas = neutrality_influence
	}
	if = {
		limit = {
			has_idea = CHI_ideological_education
		}
		remove_ideas = CHI_ideological_education
	}
	if = {
		limit = {
			has_idea = neutrality_influence
		}
		remove_ideas = neutrality_influence
	}
}

